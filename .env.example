# ========================================
# Application
# ========================================
NODE_ENV=development
PORT=8000

# ========================================
# Database (PostgreSQL)
# ========================================
# Local: localhost, Production: postgres (Docker service name)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=living_craft

# Database Options
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ========================================
# JWT
# ========================================
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# ========================================
# Admin Account
# ========================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password

# ========================================
# File Upload
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ========================================
# CORS
# ========================================
CORS_ORIGINS=http://localhost:3000

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
