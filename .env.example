# 환경변수 예시 파일
# 이 파일을 복사해서 .env 파일을 만들고 실제 값으로 변경하세요

# Database
DATABASE_TYPE=postgres
DATABASE_HOST=postgres  # Docker: postgres, 로컬: localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password123  # 보안을 위해 변경하세요
DATABASE_NAME=reservation_dev

# Database (Production)
DB_USERNAME=reservation_prod_user
DB_PASSWORD=secure_production_password  # 강력한 비밀번호로 변경

# JWT
JWT_SECRET=your-super-secret-key-change-this-in-production  # 반드시 변경
JWT_EXPIRES_IN=7d

# Redis (for Bull queue)
REDIS_HOST=redis  # Docker: redis, 로컬: localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PASSWORD_PROD=secure_redis_password  # 프로덕션용

# pgAdmin
PGADMIN_EMAIL=admin@yourcompany.com  # 실제 이메일로 변경
PGADMIN_PASSWORD=secure_admin_password  # 강력한 비밀번호로 변경

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Swagger
SWAGGER_TITLE="예약 서비스 API"
SWAGGER_DESCRIPTION="개인 사업자용 예약 서비스 플랫폼 API"
SWAGGER_VERSION="1.0"

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Admin credentials
ADMIN_EMAIL=admin@example.com  # 실제 관리자 이메일로 변경
ADMIN_PASSWORD=admin123!@#  # 강력한 비밀번호로 변경

# Naver OAuth
NAVER_CLIENT_ID=TlVTw_nfik1JB5syT8b2
NAVER_CLIENT_SECRET=mVN0TjH7lD
NAVER_CALLBACK_URL=http://localhost:8000/api/auth/callback/naver

# SMS/Email service config (네이버 클라우드 플랫폼)
SMS_API_KEY=your_sms_api_key
EMAIL_API_KEY=your_email_api_key

# 네이버 클라우드 플랫폼 SENS (SMS)
NCP_ACCESS_KEY=your_ncp_access_key
NCP_SECRET_KEY=your_ncp_secret_key
NCP_SERVICE_ID=your_service_id
NCP_CALLING_NUMBER=010-1234-5678

# 네이버 클라우드 플랫폼 Cloud Outbound Mailer
NCP_EMAIL_ACCESS_KEY=your_email_access_key
NCP_EMAIL_SECRET_KEY=your_email_secret_key

# Environment
NODE_ENV=development  # development | production
DEBUG=true