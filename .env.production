# Production Environment

# Application
NODE_ENV=production
PORT=8000

# Database - PostgreSQL
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=reservation_prod_user
DATABASE_PASSWORD=secure_production_password
DATABASE_NAME=reservation_prod
DB_SYNCHRONIZE=false

# JWT
JWT_SECRET=super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=24h

# Redis (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Swagger (disabled in production)
SWAGGER_TITLE="예약 서비스 API"
SWAGGER_DESCRIPTION="개인 사업자용 예약 서비스 플랫폼 API"
SWAGGER_VERSION="1.0"

# CORS
CORS_ORIGINS=https://yourdomain.com

# Rate Limiting (stricter in production)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=50

# Admin credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure_admin_password

# Naver OAuth
NAVER_CLIENT_ID=your_production_client_id
NAVER_CLIENT_SECRET=your_production_client_secret
NAVER_CALLBACK_URL=https://yourdomain.com/api/auth/callback/naver

# Naver Cloud Platform - SENS (SMS)
NCP_ACCESS_KEY=your_ncp_access_key
NCP_SECRET_KEY=your_ncp_secret_key
NCP_SERVICE_ID=your_sens_service_id
NCP_SENDER_PHONE=your_sender_phone_number

# Naver Cloud Platform - Outbound Mailer
NCP_MAILER_ACCESS_KEY=your_ncp_mailer_access_key
NCP_MAILER_SECRET_KEY=your_ncp_mailer_secret_key
NCP_MAILER_SERVICE_ID=your_mailer_service_id
NCP_SENDER_EMAIL=noreply@yourdomain.com
NCP_SENDER_NAME=예약 서비스

# Business Settings
BUSINESS_NAME=내 서비스명
BUSINESS_PHONE=010-1234-5678
BUSINESS_EMAIL=contact@yourdomain.com
BUSINESS_ADDRESS=서울시 강남구 테헤란로 123