# =========================================
# 스테이징 환경 변수 설정
# =========================================

# 환경 설정
NODE_ENV=staging
PORT=8000

# 데이터베이스 설정 (스테이징용)
DATABASE_TYPE=postgres
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=staging_password123
DB_NAME=reservation_staging
DB_SYNCHRONIZE=false

# JWT 설정
JWT_SECRET=staging-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# 관리자 계정 (스테이징용)
ADMIN_EMAIL=admin@staging.reservation.com
ADMIN_PASSWORD=staging_admin123

# 네이버 OAuth (스테이징용 - 실제 값으로 변경 필요)
NAVER_CLIENT_ID=your-staging-naver-client-id
NAVER_CLIENT_SECRET=your-staging-naver-client-secret
NAVER_CALLBACK_URL=http://localhost:8080/api/auth/naver/callback

# pgAdmin 설정
PGADMIN_EMAIL=admin@staging.reservation.com
PGADMIN_PASSWORD=staging_admin123

# 파일 업로드 설정
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# 알림 설정 (네이버 클라우드 플랫폼)
# 스테이징에서는 실제 SMS/Email 발송하지 않도록 설정
NCP_ACCESS_KEY=staging-access-key
NCP_SECRET_KEY=staging-secret-key
NCP_REGION=KR
NCP_SERVICE_ID=staging-sms-service-id
NCP_CALLING_NUMBER=010-0000-0000

# 이메일 설정 (스테이징에서는 테스트용)
NCP_EMAIL_ACCESS_KEY=staging-email-access-key
NCP_EMAIL_SECRET_KEY=staging-email-secret-key

# Redis 설정 (필요시)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 스테이징 전용 설정
STAGING_MODE=true
DEBUG_MODE=true
LOG_LEVEL=debug