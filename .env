# ========================================
# Application
# ========================================
NODE_ENV=development
PORT=8000

# ========================================
# Database (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password123
DB_DATABASE=living_craft

# Database Options
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ========================================
# JWT
# ========================================
JWT_SECRET=your-dev-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h

# ========================================
# Admin Account
# ========================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# ========================================
# File Upload
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ========================================
# CORS
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
